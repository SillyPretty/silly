<Window x:Class="Random2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Random2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Image Source="/JPG.png" Stretch="UniformToFill"/>
        <Border MinWidth="400" Margin="15" VerticalAlignment="Center" MaxWidth="700">
            <StackPanel>
                <TextBlock Margin="10" x:Name="TextBlock1"  FontSize="30px" HorizontalAlignment="Center" >Великий бог рандома</TextBlock>
                <Button Width="150" Height="30" Name="Generate" Content="Выбрать счастливчика" Background="#00E3E6" Click="Generate_Click" Cursor="Hand" />
            </StackPanel>
        </Border>
    </Grid>
</Window>